{
  "name": "@chasenocap/meta-gothic-framework",
  "version": "0.1.0",
  "private": true,
  "description": "Meta GOTHIC Framework - AI-Guided Opinionated TypeScript Framework with High Intelligent Components",
  "type": "module",
  "scripts": {
    "start": "node scripts/start-all-services.cjs",
    "start:watch": "node scripts/start-with-monitor.cjs",
    "stop": "node scripts/stop-all-services.cjs",
    "restart": "npm run stop && npm run start",
    "dev": "npm run start:watch",
    "build": "npm run build:ui && npm run build:packages",
    "build:ui": "cd packages/ui-components && npm run build",
    "build:packages": "for dir in packages/*/; do (cd \"$dir\" && npm run build); done",
    "test": "for dir in packages/*/; do (cd \"$dir\" && npm test); done",
    "lint": "for dir in packages/*/; do (cd \"$dir\" && npm run lint); done",
    "update-submodules": "git submodule update --remote --merge",
    "init-submodules": "git submodule update --init --recursive",
    "status": "node scripts/status.cjs",
    "status:watch": "node scripts/status-watch.cjs",
    "logs": "tail -f /tmp/claude-yoga.log /tmp/repo-agent-yoga.log /tmp/meta-gothic-gateway.log",
    "logs:claude": "tail -f /tmp/claude-yoga.log",
    "logs:repo": "tail -f /tmp/repo-agent-yoga.log",
    "logs:gateway": "tail -f /tmp/meta-gothic-gateway.log",
    "logs:ui": "tail -f /tmp/ui-components.log",
    "clean": "npm run stop && rm -f /tmp/*-yoga.log /tmp/*-gateway.log /tmp/ui-components.log",
    "check-ports": "node scripts/check-ports.cjs"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.11.10",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChaseNoCap/h1b-visa-analysis.git",
    "directory": "meta-gothic-framework"
  },
  "author": "ChaseNoCap",
  "license": "MIT"
}