{
  "name": "@meta-gothic/meta-gothic-app",
  "version": "1.0.0",
  "description": "GraphQL Federation Gateway for the metaGOTHIC framework",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:simple": "tsx watch src/simple-gateway.ts",
    "dev:mesh": "tsx watch src/mesh-gateway.ts",
    "dev:yoga-mesh": "tsx watch src/yoga-mesh-gateway.ts",
    "dev:yoga-mesh-subscriptions": "tsx watch src/yoga-mesh-gateway-subscriptions.ts",
    "dev:yoga-mesh-ws": "tsx watch src/yoga-mesh-gateway-ws-fixed.ts",
    "dev:advanced-mesh": "tsx watch src/advanced-mesh-gateway.ts",
    "dev:advanced-mesh-nocache": "tsx watch src/advanced-mesh-gateway-nocache.ts",
    "dev:advanced-mesh-cache": "tsx watch src/advanced-mesh-gateway-with-cache.ts",
    "dev:federation": "tsx watch src/federation-gateway.ts",
    "dev:mercurius": "tsx watch src/mercurius-federation.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/websocket": "^11.0.0",
    "@graphql-mesh/openapi": "^0.109.9",
    "@graphql-mesh/runtime": "^0.106.3",
    "@graphql-mesh/transform-filter-schema": "^0.104.3",
    "@graphql-mesh/transform-naming-convention": "^0.105.4",
    "@graphql-mesh/transform-prefix": "^0.105.4",
    "@graphql-mesh/transform-rename": "^0.105.4",
    "@graphql-tools/executor-graphql-ws": "^2.0.5",
    "@graphql-tools/executor-http": "^2.0.2",
    "@graphql-tools/graphql-file-loader": "^8.0.20",
    "@graphql-tools/load": "^8.1.0",
    "@graphql-tools/stitch": "^9.4.24",
    "@graphql-tools/utils": "^10.8.6",
    "@graphql-tools/wrap": "^10.1.0",
    "@graphql-yoga/plugin-response-cache": "^3.15.6",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.18.1",
    "fastify": "^5.2.1",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.16.2",
    "graphql-yoga": "^5.13.5",
    "node-fetch": "^3.3.2",
    "pino-pretty": "^10.3.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@graphql-mesh/cli": "^0.100.4",
    "@graphql-mesh/graphql": "^0.104.3",
    "@graphql-mesh/plugin-mock": "^0.105.4",
    "@graphql-mesh/transform-federation": "^0.104.3",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
