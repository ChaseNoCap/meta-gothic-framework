{
  "name": "@meta-gothic/meta-gothic-app",
  "version": "1.0.0",
  "description": "GraphQL Federation Gateway for the metaGOTHIC framework",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/simple-gateway.ts",
    "dev:federation": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/websocket": "^11.0.0",
    "@mercuriusjs/gateway": "^5.0.0",
    "@types/node-fetch": "^2.6.12",
    "fastify": "^5.2.1",
    "graphql": "^16.8.1",
    "mercurius": "^16.1.0",
    "node-fetch": "^3.3.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
