{
  "name": "@meta-gothic/git-service",
  "version": "1.0.0",
  "description": "Git Service - GraphQL service for Git operations in the metaGOTHIC framework",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index-yoga.ts",
    "dev:federation": "tsx src/index-federation.ts",
    "dev:sse": "tsx src/index-sse.ts",
    "dev:watch": "tsx watch src/index-yoga.ts",
    "build": "tsc",
    "start": "node dist/index-yoga.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "generate-types": "graphql-codegen"
  },
  "dependencies": {
    "@apollo/federation-subgraph-compatibility": "^2.2.1",
    "@apollo/subgraph": "^2.10.2",
    "@chasenocap/event-system": "file:../../packages/event-system",
    "@chasenocap/file-system": "file:../../packages/file-system",
    "@chasenocap/logger": "file:../../packages/logger",
    "@envelop/dataloader": "^7.1.3",
    "@envelop/graphql-jit": "^9.1.3",
    "@fastify/cors": "^9.0.1",
    "@graphql-tools/schema": "^10.0.23",
    "@graphql-yoga/plugin-response-cache": "^3.15.6",
    "@meta-gothic/shared-types": "file:../shared",
    "fastify": "^4.26.0",
    "graphql": "^16.8.1",
    "graphql-sse": "^2.5.4",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.13.5",
    "nanoid": "^5.1.5",
    "pino-pretty": "^10.3.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
